<form method="post" action="{{ path('products_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <a href="{{ path('products_index') }}" class="btn btn-primary btn-success"> Regresar</a>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-primary btn-danger">Delete</button>
</form>
