<form method="post" action="{{ path('categorias_delete', {'id': categoria.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <a href="{{ path('categorias_index') }}" class="btn btn-primary btn-success"> Regresar</a>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categoria.id) }}">
    <button class="btn btn-primary btn-danger">Delete</button>
</form>