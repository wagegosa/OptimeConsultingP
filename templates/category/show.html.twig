{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Ver Categoria</h1>
            <ol class="breadcrumb">
                <li><a href="">Inicio </a></li>/
                <li><a href="{{ path('category_index') }}">Categorias </a></li>/
                <li class="active">Listado de Categorias</li>
            </ol>
        </div>
    </div>
    <!-- editar -->
  <div class="row">
    <div class="col-md-11">
      <span></span>
    </div>
    <div class="col-md-1">
      <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning"><span class="glyphicon glyphicon-pencil"></span> Editar</a>
    </div>
  </div>
  <!-- Formulario -->
  <!-- Numero -->
  <div class="row">
    <div class="col-md-4">
      <label for="Nombre">Código:</label>
    </div>
    <div class="col-md-8">
      <label for="Nombre">{{ category.code }}</label>
      <span class="help-block" id="error"></span>
    </div>
  </div>
  <!-- Nombre -->
  <div class="row">
    <div class="col-md-4">
      <label for="Nombre">Nombre:</label>
    </div>
    <div class="col-md-8">
      <label for="Nombre">{{ category.name }}</label>
    </div>
  </div>
  <!-- Descripción -->
  <div class="row">
    <div class="col-md-4">
      <label for="Nombre">Descripción:</label>
    </div>
    <div class="col-md-8">
      <label for="Nombre">{{ category.description }}</label>
    </div>
  </div>
  <!-- Activo -->
  <div class="row">
    <div class="col-md-4">
      <label for="Nombre">Activo:</label>
    </div>
    <div class="col-md-8">
      <label for="Nombre">{{ category.active ? 'Yes' : 'No' }}</label>
    </div>
  </div>
  <!-- Botones -->
  <div class="row">
    <div class="col-md-8"> 
      {{ include('category/_delete_form.html.twig') }}
    </div>
  </div>
</div>
{% endblock %}
